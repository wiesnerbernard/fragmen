{
  "name": "fragmen",
  "description": "A utility library to copy code fragments into your project",
  "version": "1.0.2",
  "type": "module",
  "license": "MIT",
  "homepage": "https://fragmen.vercel.app",
  "workspaces": [
    "apps/*"
  ],
  "bin": {
    "fragmen": "./dist/src/cli.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "registry"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wiesnerbernard/fragmen.git"
  },
  "author": {
    "name": "Bernard Wiesner",
    "email": "brtyu941@gmail.com"
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "quality": "npm run lint && npm run format:check && npm run type-check",
    "quality:fix": "npm run lint:fix && npm run format",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage && node scripts/update-badges.js",
    "test:coverage:ci": "vitest run --coverage",
    "test:coverage:watch": "vitest --coverage",
    "test:coverage:open": "npm run test:coverage && ( [ \"$OSTYPE\" = \"darwin\" ] && npx open-cli coverage/index.html || npx open-cli coverage/index.html || start coverage/index.html || xdg-open coverage/index.html )",
    "test:coverage:check": "node scripts/coverage.js check",
    "badges:update": "node scripts/update-badges.js",
    "dev": "npm run build && node dist/src/cli.js",
    "web:dev": "npm run dev --workspace=apps/web",
    "web:build": "npm run build --workspace=apps/web",
    "web:start": "npm run start --workspace=apps/web",
    "release:patch": "npm version patch && git push && git push --tags",
    "release:minor": "npm version minor && git push && git push --tags",
    "release:major": "npm version major && git push && git push --tags",
    "prepare": "node -e \"try { require('husky').install() } catch (e) { if (e.code !== 'MODULE_NOT_FOUND') throw e }\""
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/eslint__js": "^8.42.3",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.3.1",
    "@types/prompts": "^2.4.9",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "open-cli": "^8.0.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.0",
    "fs-extra": "^11.3.1",
    "prompts": "^2.4.2"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
